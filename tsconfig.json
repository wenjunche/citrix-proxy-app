{
    "compilerOptions": {
        "target": "es2019",
        "lib": ["dom", "es2019"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "out",
        "jsx": "react",
        "rootDir": ".",
     },
    "include": ["./fin.d.ts", "./src/**/*.ts", "src/index.tsx"],
    "exclude": ["node_modules"]
}
